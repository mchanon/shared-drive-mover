{
  "env": {
    "browser": true,
    "node": false
  },
  "plugins": [
    "deprecation",
    "@typescript-eslint"
  ],
  "rules": {
    "deprecation/deprecation": "warn",
    "@typescript-eslint/sort-type-constituents": "error"
  },
  "overrides": [
    {
      "parserOptions": {
        "project": null
      },
      "files": [
        "gulpfile.js",
        "backend.webpack.config.js",
        "frontend.webpack.config.js",
        "test.frontend.webpack.config.js",
        ".eslintrc.js"
      ],
      "rules": {
        "deprecation/deprecation": "off"
      }
    }
  ]
}
